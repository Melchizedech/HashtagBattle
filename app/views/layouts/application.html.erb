<!DOCTYPE html>
<html>
<head>
  <title>HashtagBattle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
  <div class="navbar-header">
    <%= link_to "HashtagBattle-POC", root_path, :class => "navbar-brand" %>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-left">
      <li>
          <a class="btn dropdown-toggle" type="button" data-toggle="dropdown">Battles
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "All battles", battle_index_path %></li>
            <li <%= 'class=disabled' unless @user %>><%= link_to "My battles", battle_index_user_path %></li>
            <li><%= link_to "Create battle", new_battle_path %></li>
          </ul>
      </li>
      <li>
          <a class="btn dropdown-toggle" type="button" data-toggle="dropdown">Hashtags
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "All hashtags", hashtag_index_path %></li>
            <li <%= 'class=disabled' unless @user %>><%= link_to "My hashtag", hashtag_index_user_path %></li>
          </ul>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if @user %>
        <li><%= link_to @user.name, '#' %></li>
        <li><%= link_to 'Log out', controller: :home, action: :logout %></li>
      <% else %>
        <li><%= link_to 'Sign in with Twitter', twitter_auth_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
<%= yield %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

</body>
</html>
