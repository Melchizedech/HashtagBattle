<!DOCTYPE html>
<html>
<head>
  <title>HashtagBattle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container">
  <div class="navbar-header">
    <%= link_to "HashtagBattle-POC", root_path, :class => "navbar-brand" %>
  </div>
  <div class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Battles", battle_index_path %></li>
      <li><%= link_to "Hashtags", hashtag_index_path %></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <% if @user %>
        <li><%= link_to @user.mail, '#' %></li>
        <li><%= link_to 'Log out', controller: :home, action: :logout %></li>
      <% else %>
        <li><%= link_to 'Sign in with Twitter', controller: :home, action: :login %></li>
      <% end %>
    </ul>
  </div>
</nav>
<%= yield %>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

</body>
</html>
